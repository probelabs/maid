{
  "name": "mermaid-lint",
  "version": "1.0.0",
  "type": "module",
  "main": "index.js",
  "bin": {
    "mermaid-lint": "./out/cli.js"
  },
  "scripts": {
    "langium:generate": "langium generate",
    "build": "npm run langium:generate && tsc",
    "test": "node scripts/test-linter.js flowchart",
    "test:compare": "node scripts/compare-linters.js flowchart",
    "lint:valid": "for file in test-fixtures/flowchart/valid/*.mmd; do node out/cli.cjs \"$file\" || exit 1; done",
    "lint:invalid": "for file in test-fixtures/flowchart/invalid/*.mmd; do node out/cli.cjs \"$file\" 2>/dev/null && exit 1 || true; done"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^11.12.0",
    "@types/node": "^24.5.2",
    "langium": "^4.1.0",
    "langium-cli": "^4.1.0",
    "typescript": "^5.9.2"
  }
}
